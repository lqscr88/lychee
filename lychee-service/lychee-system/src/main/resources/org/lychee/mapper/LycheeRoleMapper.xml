<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.lychee.mapper.LycheeRoleMapper">


    <sql id="roleSql">
        role.id,role.name,role.create_time
    </sql>

    <select id="selectRoleByUserId" resultType="org.lychee.entity.LycheeRole">
        SELECT <include refid="roleSql"/> from lychee_user_role zj
        left JOIN lychee_role role on zj.role_id=role.id
        where zj.user_id=#{userId}
    </select>

    <delete id="selectRoleByUserId">
        delete from lychee_user_role where role_id=#{roleId}
    </delete>

</mapper>
